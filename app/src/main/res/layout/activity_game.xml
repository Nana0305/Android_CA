<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginTop="20dp"
android:layout_marginBottom="40dp"
android:layout_marginLeft="20dp"
android:layout_marginRight="20dp"
tools:context=".GameActivity">

<LinearLayout
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:padding="30dp">

    <TextView
        android:id="@+id/matches"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:text="0 of 6 matches"
        android:gravity="start"/>

    <TextView
        android:id="@+id/timer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:text="00:00:00"
        android:gravity="center"/>
</LinearLayout>

<androidx.constraintlayout.helper.widget.Flow
    android:id="@+id/pic_grid"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@id/header"
    app:layout_constraintBottom_toBottomOf="parent"
    app:flow_wrapMode="aligned"
    app:flow_horizontalGap="5dp"
    app:flow_verticalGap="5dp"
    app:flow_maxElementsWrap="3"
    app:constraint_referenced_ids="btn0,btn1,btn2,btn3,btn4,btn5,btn6,btn7,btn8,btn9,btn10,btn11"/>

<ImageButton
    android:id="@+id/btn0"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:src="@drawable/pic_back_cross"
    android:contentDescription="imagebtn"
    android:scaleType="centerCrop"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintTop_toTopOf="@id/pic_grid"
    app:layout_constraintStart_toStartOf="@id/pic_grid"
    app:layout_constraintEnd_toStartOf="@id/btn1"/>
<ImageButton
    android:id="@+id/btn1"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:src="@drawable/pic_back_cross"
